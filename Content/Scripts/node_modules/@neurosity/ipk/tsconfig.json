{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": false,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ]
}